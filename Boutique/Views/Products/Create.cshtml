@model Product

@{
    ViewData["Title"] = "Add a new Product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Product</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProductPicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductImg" class="control-label"></label>
                        <input asp-for="ProductImg" class="form-control" />
                        <span asp-validation-for="ProductImg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductType" class="control-label"></label>
                        <input asp-for="ProductType" class="form-control" />
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QuantiteDispo" class="control-label"></label>
                        <input asp-for="QuantiteDispo" class="form-control" />
                        <span asp-validation-for="QuantiteDispo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProductPicturePreview');
            output.src = $("#ProductImg").val();
        })
        $("#ProductImg").on("change", function () {
            var output = document.getElementById('ProductPicturePreview');
            output.src = $(this).val();
        })
    </script>
}

